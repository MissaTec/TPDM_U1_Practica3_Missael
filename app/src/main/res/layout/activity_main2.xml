<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textColor="#000000"
        android:text="Club"
        android:id="@+id/titulo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textColor="#000000"
        android:text="Join a Norwegian Club!"
        android:id="@+id/texto1"
        android:layout_below="@id/titulo"/>

    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:text="Practice chatting in Norwegian with other learners"
        android:id="@+id/texto2"
        android:layout_below="@+id/texto1"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/numero"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:id="@+id/imagen1" />

    <ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/paisaje1"
    android:layout_alignParentTop="true"
    android:layout_marginTop="310dp"
    android:layout_marginLeft="50dp"
    android:id="@+id/imagen2" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/paisaje2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="220dp"
        android:id="@+id/imagen3" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/paisaje3"
        android:layout_below="@id/imagen1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/imagen4" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FIND ME A CLUB"
        android:textSize="25dp"
        android:layout_below="@id/imagen4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/boton1"
        />

    <Button
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="CREATE"
        android:textSize="25dp"
        android:layout_below="@id/boton1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"/>

    <Button
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="BLUB CODE"
        android:textSize="25dp"
        android:layout_below="@id/boton1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/paisaje5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/final1"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/paisaje4"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/final1"
        android:id="@+id/final2"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/paisaje3"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/final2"
        android:id="@+id/final3"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/paisaje2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/final3"
        android:id="@+id/final4"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/paisaje1"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/final4"
        android:id="@+id/final5"/>





</RelativeLayout>